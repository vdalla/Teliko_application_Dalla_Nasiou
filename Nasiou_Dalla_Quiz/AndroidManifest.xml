                <action android:name="com.example.nasiou_dalla_quiz.CLEARSCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
          <activity
            android:name=".Activity_Mathematics" 
            android:label="@string/app_name"
            >
