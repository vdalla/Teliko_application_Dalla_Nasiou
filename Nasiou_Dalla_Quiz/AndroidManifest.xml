            </intent-filter>
        </activity>
         <activity
            android:name=".Activity_Material" 
            android:label="@string/app_name"
            >
             <intent-filter>
                <action android:name="com.example.nasiou_dalla_quiz.MATERIAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.example.nasiou_dalla_quiz.ResultActivity"
